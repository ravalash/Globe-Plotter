<section class="section">
    <div class="container middle" id="search-card">
        <h1><b>Welcome Back!</b></h1>
        <p>Here are your saved trips.</p>
    </div>
</section>

<div id="planned-trips-confirm" class="modal is-clipped">
    <div class="modal-background"></div>
    <div class="modal-content">
        <!-- Any other Bulma elements you want -->
        <div class="card is-hidden" id="unfinished-trips-card">
            <header class="card-header">
                <p class="card-header-title">
                    Confirm
                </p>
                <a href="#" class="card-header-icon" aria-label="more options">
                    <span class="icon">
                        <i class="fas fa-angle-down" aria-hidden="true"></i>
                    </span>
                </a>
            </header>
            <div class="card-content">
                <div class="content">
                    This trip has no activities planned yet and can not be started. Please choose an option from below.
                </div>
            </div>
            <footer class="card-footer">
                <button id="planned-trips-edit" class="card-footer-item">Edit Trip</button>
                <button id="planned-trips-delete" class="card-footer-item">Delete Trip</button>
                <button id="planned-trips-back" class="card-footer-item planned-trips-close">Back</button>
            </footer>
        </div>
        <div class="card is-hidden" id="planned-trips-card">
            <header class="card-header">
                <p class="card-header-title">
                    Confirm
                </p>
                <a href="#" class="card-header-icon" aria-label="more options">
                    <span class="icon">
                        <i class="fas fa-angle-down" aria-hidden="true"></i>
                    </span>
                </a>
            </header>
            <div class="card-content">
                <div class="content">
                    Ready to go? Please choose an option from below.
                </div>
            </div>
            <footer class="card-footer">
                <button id="planned-trips-start" class="card-footer-item">Start Trip</button>
                <button id="planned-trips-edit" class="card-footer-item">Edit Trip</button>
                <button id="planned-trips-delete" class="card-footer-item">Delete Trip</button>
                <button class="card-footer-item planned-trips-close">Back</button>
            </footer>
        </div>
<div class="card is-hidden" id="existing-trips-card">
            <header class="card-header">
                <p class="card-header-title">
                    Confirm
                </p>
                <a href="#" class="card-header-icon" aria-label="more options">
                    <span class="icon">
                        <i class="fas fa-angle-down" aria-hidden="true"></i>
                    </span>
                </a>
            </header>
            <div class="card-content">
                <div class="content">
                    How goes the adventure, traveler? Please choose an option from below.
                </div>
            </div>
            <footer class="card-footer">
                <button id="planned-trips-continue" class="card-footer-item">Continue Trip</button>
                <button id="planned-trips-delete" class="card-footer-item">Delete Trip</button>
                <button id="planned-trips-back" class="card-footer-item planned-trips-close">Back</button>
            </footer>
        </div>

    </div>
    <button  class="modal-close is-large planned-trips-close" aria-label="close"></button>
</div>

<div class="columns trip-table">
    <div class="column">
        <h1>Planned Trips</h1>
        <div class="container" id="planned-trips-list">
        </div>
        <div class="wrapper">
            <button class="container button-card" id="newTrip">
                <p><b>PLAN A NEW TRIP</b></p>
            </button>
        </div>
    </div>
    <div class="column">
        <h1>Trips in Progress</h1>
        <div class="container" id="trips-in-progress-list">
        </div>
    </div>
    <div class="column">
        <h1>Completed Trips</h1>
        <div class="container" id="completed-trips-list">
        </div>
    </div>
</div>
<a href="/logout">Log Out</a>
</div>

